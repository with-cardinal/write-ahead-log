{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "outDir": "dist/",
    "jsx": "react",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**",
    "node_modules",
  ]
}